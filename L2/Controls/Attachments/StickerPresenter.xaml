<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ELOR.Laney.Controls.Attachments">
  <Design.PreviewWith>
    <controls:StickerPresenter />
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type controls:StickerPresenter}" TargetType="controls:StickerPresenter">
    <Setter Property="Width" Value="168"/>
    <Setter Property="Height" Value="168"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Border x:Name="StickerView"/>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
