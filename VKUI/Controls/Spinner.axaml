<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:VKUI.Controls">
  <Design.PreviewWith>
    <controls:Spinner Width="24" Height="24"/>
  </Design.PreviewWith>

  <Style Selector="controls|Spinner">
    <Setter Property="Foreground" Value="{DynamicResource VKAccentBrush}"/>
    <Setter Property="Width" Value="16"/>
    <Setter Property="Height" Value="16"/>
    <Setter Property="RenderTransform">
      <Setter.Value>
        <RotateTransform />
      </Setter.Value>
    </Setter>
    <Setter Property="Template">
      <ControlTemplate>
        <PathIcon x:Name="Icon" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}"/>
      </ControlTemplate>
    </Setter>
    <Style.Animations>
      <Animation Duration="0:0:0.7" IterationCount="Infinite">
        <KeyFrame Cue="0%">
          <Setter Property="RotateTransform.Angle" Value="0"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="RotateTransform.Angle" Value="360"/>
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>
</Styles>
